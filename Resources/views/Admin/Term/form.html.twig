{% extends "TaxonomyBundle::layout.html.twig" %}

{% block page_title %}{{ term.name ? 'Edit' : 'Add' }} {{ term.name }} Term{% endblock %}

{% block content %}
    {{ form_start(form) }}
    {{ form_row(form.name) }}
    {{ form_row(form.desc) }}
    {{ form_row(form.parent) }}
